<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:padding="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ft_radio_simple"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        fresco:roundAsCircle="true"
        fresco:roundingBorderWidth="20dp"/>

    <RelativeLayout
        android:id="@+id/relative_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ft_radio_simple">

        <TextView
            android:id="@+id/ft_radio_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_horizontal"
            android:singleLine="true"
            android:text="小漠"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/ft_radio_status"
            android:layout_gravity = "center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="正在直播"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/ft_radio_status_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity = "center_vertical"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/ft_radio_status"
            android:adjustViewBounds="true"
            android:src="@drawable/external_live_starting_icon"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ft_radio_simple">

        <TextView
            android:id="@+id/ft_radio_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_horizontal"
            android:singleLine="true"
            android:text="国服第一系列作者"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/ft_radio_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:text="全民"
            android:textSize="12sp"/>
    </RelativeLayout>


</RelativeLayout>
